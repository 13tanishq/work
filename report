@RestControllerAdvice
public class GlobalExceptionHandlerAdapter extends ResponseEntityExceptionHandler {
    @Autowired
    private ExceptionHandlingService exceptionHandlingService;

    @Override
    protected ResponseEntity<Object> handleHttpMessageNotReadable(
            HttpMessageNotReadableException ex, HttpHeaders headers, HttpStatus status, WebRequest request) {
        // If you have the target DTO class, pass it; else, just null (will emit body-level message)
        return (ResponseEntity) exceptionHandlingService.handleHttpMessageNotReadable(ex, null);
    }

    @ExceptionHandler(Exception.class)
    public ResponseEntity<Object> handleAllOthers(Exception ex) {
        return (ResponseEntity) exceptionHandlingService.handleAllOthers(ex);
    }
}
